<%= form_with model: book do |form| %>
  <div><b>
    <%= form.label :tittle %><br>
    <%= form.text_field :tittle %>
    <% book.errors.full_messages_for(:tittle).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </b>
  </div>

  <div><b>
    <%= form.label :content %><br>
    <%= form.text_area :content %><br>
    <% book.errors.full_messages_for(:content).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </b></div>
  <div>
    <%= form.file_field :book_image %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
